# References:
# https://kosyfrances.com/ingress-gce-letsencrypt/

resource "helm_release" "cert" {
  name              = "jetstack/cert-manager"
  description       = "${title(var.author.name)}'s Helm Chart for the ${local.app_name}'s certificate."
  chart             = "https://charts.jetstack.io"
  namespace         = "cert-manager"
  version = "v1.2.0"
  create_namespace = true
  cleanup_on_fail   = true
  atomic            = true

  dynamic "set" {
    for_each = local.values
    content {
      name  = set.key
      value = set.value
    }
  }
}
